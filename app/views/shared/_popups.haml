.modal.fade#modal-login
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'aria-hidden' => true, type: :button, data: {dismiss: :modal}} ×
        %h4.modal-title= t 'login_form.title'
      .modal-body
        = simple_form_for(User.new, as: :user, url: session_path(:user), html: {class: '', role: :form}) do |f|
          = f.error_notification
          = f.input :email,     input_html: { class: 'form-control' }
          = f.input :password,  input_html: { class: 'form-control' }

          = f.button :submit, class: 'btn btn-default', value: t('login_form.submit')

- partner = Partner.new
- partner.user = User.new
.modal.fade#modal-signup
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'aria-hidden' => true, type: :button, data: {dismiss: :modal}} ×
        %h4.modal-title= t 'signup_form.title'
      .modal-body
        = simple_form_for partner do |f|
          = f.error_notification

          = f.simple_fields_for :user do |user|
            = user.input :email,                 input_html: { class: 'form-control' }
            = user.input :password,              input_html: { class: 'form-control' }
            = user.input :password_confirmation, input_html: { class: 'form-control' }

          = f.button :submit, class: 'btn btn-default', value: t('signup_form.submit')