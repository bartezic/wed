= simple_form_for [:admin, @admin_user] do |f|
  = f.error_notification
  .row
    .col-lg-6
      %ul#myTab.nav.nav-tabs
        %li.active
          %a{href: "#locale-uk"} Українська
        %li
          %a{href: "#locale-ru"} Російська
      .tab-content
        #locale-uk.tab-pane.active
          - f.globalize_fields_for :uk do |l|
            = l.input :name,            input_html: { class: 'form-control' }
        #locale-ru.tab-pane
          - f.globalize_fields_for :ru do |l|
            = l.input :name,            input_html: { class: 'form-control' }
    
      = f.input :avatar,                input_html: { class: 'form-control' }
      = f.input :avatar_remote_url,     input_html: { class: 'form-control' } 
      = f.input :email,                 input_html: { class: 'form-control' }
      = f.input :password,              input_html: { class: 'form-control' }
      = f.input :password_confirmation, input_html: { class: 'form-control' }
  
      = f.button :submit, class: 'btn btn-default'
