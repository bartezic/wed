%p#notice= notice

%dl
  %dt Name
  %dd= @category.name
  
  %dt Name sing
  %dd= @category.name_sing

  %dt Meta description
  %dd= @category.meta_description
  
  %dt Meta keywords
  %dd= @category.meta_keywords
  
  %dt Slug
  %dd= @category.slug

  %dt Logo
  %dd= image_tag @category.logo(:thumb)

= link_to 'Edit', edit_admin_category_path(@category), class: 'btn btn-default'
= link_to 'Back', admin_categories_path, class: 'btn btn-default'
