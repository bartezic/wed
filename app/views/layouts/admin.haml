              %span.icon-bar
              %span.icon-bar
          .navbar-collapse.collapse
            %ul.nav.navbar-nav

            %ul.nav.navbar-nav.navbar-right
              %li.locale{class: locale == :uk && 'active', data: { locale: :uk }}= link_to "Укр", "?locale=uk"
              %li.locale{class: locale == :ru && 'active', data: { locale: :ru }}= link_to "Рус", "?locale=ru"
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: "/"} Logo
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li{class: request.path == admin_admin_users_path && 'active'}
                %a{href: admin_admin_users_path} Admins
              %li{class: request.path == admin_partners_path && 'active'}
                %a{href: admin_partners_path} Partners
              %li{class: request.path == admin_categories_path && 'active'}
                %a{href: admin_categories_path} Categories
              %li{class: request.path == admin_locations_path && 'active'}
