!!!
%html{ lang: locale, dir: :ltr }
  %head
    %title Wed
    = csrf_meta_tags
    %meta(name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0")
    %meta(name="Author" content="Viktor Oleksyn [www.bartezic.com]")
    %link(rel="icon" href="/assets/favicon.ico")
    %link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&subset=cyrillic-ext,cyrillic,latin-ext,latin" rel="stylesheet" type="text/css")
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true

  %body.app
    #wrap
      = render 'shared/nav', part: :app
      = render 'shared/flash'
      = yield
    = render 'shared/footer'
    = yield :scripts