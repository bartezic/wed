!!!
%html
  %head
    %title Wed
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %link(rel="icon" href="/assets/favicon.ico")
  %body.cabinet

    / Wrap all page content here
    #wrap
      / Fixed navbar
      .navbar.navbar-default.navbar-static-top
        .container
          .navbar-header
            %button.navbar-toggle{type: :button, data: {target: '.nc2', toggle: :collapse}}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: "/cabinet"} Logo
          .navbar-collapse.collapse.nc2
            %ul.nav.navbar-nav
              %li{class: request.path == cabinet_profile_path(:general) && 'active'}= link_to 'Profile',  cabinet_profile_path(:general)
              %li{class: request.path == cabinet_galleries_path       && 'active'}= link_to 'Galleries', cabinet_galleries_path
              %li{class: request.path == cabinet_photos_path          && 'active'}= link_to 'Photos',    cabinet_photos_path
              %li{class: request.path == cabinet_videos_path          && 'active'}= link_to 'Videos',    cabinet_videos_path
            %ul.nav.navbar-nav.navbar-right
              %li.locale{class: locale == :uk && 'active', data: {locale: :uk}}= link_to "Укр", "?locale=uk"
              %li.locale{class: locale == :ru && 'active', data: {locale: :ru}}= link_to "Рус", "?locale=ru"
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = current_user.email 
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'На сайт', root_path
                  %li= link_to 'Вийти', destroy_user_session_path, { method: :delete }
            /.nav-collapse
      / Begin page content
      .container
        = render 'shared/flash'
        = yield
    = render 'shared/footer'