%h1= @category.name
.row
  - @partners.each_with_index do |partner, i|
    .col-xs-4.col-sm-4.col-md-3.col-lg-2
      = link_to partner do
        = image_tag(partner.user.avatar(:thumb_220), { class: :'img-circle img-responsive', alt: partner.name })
        %div= partner.name
        %div= raw "від <b>#{partner.price}</b>$"
    - if (i+1)%6 == 0
      .clearfix.visible-lg
    - elsif (i+1)%4 == 0
      .clearfix.visible-md
    - elsif (i+1)%3 == 0
      .clearfix.visible-xs.visible-sm
    
.row
  .col-lg-12
    = paginate @partners