%section.login
  .container
    .row
      .col-md-4.col-sm-3
      .col-md-4.col-sm-6
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'sky-form boxed'}) do |f|
          %header Забули пароль?
          %fieldset
            %section
              %label.input
                %i.icon-append.fa.fa-envelope
                = f.input_field :email, required: true, autofocus: true, placeholder: 'Email'
                %b.tooltip.tooltip-bottom-right Введіть свій email, щоб змінити пароль
          %footer
            %button.button.btn-block(name="commit" type="submit") Відправити інструкції зміни пароля
          .divider
            %i.fa.fa-chevron-down
          %footer
            = link_to new_session_path(resource_name) do
              %button.button.btn-block.sign-up Увійти
            = link_to new_registration_path(resource_name) do
              %button.button.btn-block.sign-up.mt Створити обліковий запис
        = render 'devise/shared/links'
      .col-md-4.col-sm-3